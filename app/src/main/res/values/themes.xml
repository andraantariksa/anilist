<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Anilist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorHint">#737373</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>
    <style name="EditTextSearch" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">#00FFFFFF</item>
    </style>
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorPrimary">@color/white</item>
    </style>

    <!-- DIVIDER -->
    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>